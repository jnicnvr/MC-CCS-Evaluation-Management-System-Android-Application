<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MCFE.ContactActivity"
    android:background="@drawable/bg_mc_contact_us"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="20dp">

        <GridLayout
            android:columnCount="1"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:id="@+id/l_1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--    <ImageView
                            android:paddingTop="15dp"
                            android:background="@drawable/checkedd"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>-->
                    <TextView
                        android:text="Contact Us!"
                        android:textColor="#18a08b"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Reach our team."
                        android:textColor="#18a08b"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView237"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:paddingStart="10dp"
                            android:text="PROJECT REPRESENTATIVE : "
                            android:textAlignment="viewStart" />
                        <TextView
                            android:id="@+id/textView847"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:gravity="center"
                            android:text="Goal Digger" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_contactno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:paddingStart="10dp"
                            android:text="CONTACT NUMBER : "
                            android:textAlignment="viewStart" />
                        <TextView
                            android:id="@+id/tv_contactnodetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:gravity="center"
                            android:text="+63999256535 / +63912565876" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_fbpage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:paddingStart="10dp"
                            android:text="FACEBOOK PAGE : "
                            android:textAlignment="viewStart" />
                        <TextView
                            android:id="@+id/tv_fbpagedetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:gravity="center"
                            android:text="www.facebook.com/mc-ccs.page" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:paddingStart="10dp"
                            android:text="EMAIL ADDRESS : "
                            android:textAlignment="viewStart" />
                        <TextView
                            android:id="@+id/tv_emaildetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:gravity="center"
                            android:text="mcfecollege@gmail.com" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:paddingStart="10dp"
                            android:text="ADDRESS : "
                            android:textAlignment="viewStart" />
                        <TextView
                            android:id="@+id/tv_addressDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#18a08b"
                            android:gravity="left"
                            android:text="Gov. W. Panotes Avenue, 4600, Daet, Camarines Norte" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/btn_gradient"
                            android:text="Go back"
                            android:textColor="#ffffff" />

                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </GridLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>